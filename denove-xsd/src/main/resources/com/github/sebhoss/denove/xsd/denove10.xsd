<xs:schema xmlns:xs             =   "http://www.w3.org/2001/XMLSchema" 
           targetNamespace      =   "http://sebhoss.github.com/denove/schema/1.0/" 
           xmlns:dve            =   "http://sebhoss.github.com/denove/schema/1.0/" 
           elementFormDefault   =   "qualified"
           attributeFormDefault =   "qualified"
           version              =   "1.0">

  <xs:annotation>
    <xs:documentation xml:lang="en">
      This is the Denove XML Schema 1.0.
    </xs:documentation>
  </xs:annotation>

  <xs:complexType name="lesson" mixed="false">
    <xs:annotation>
      <xs:documentation xml:lang="en">
        A lesson consists of as many words as one may want. In addition to that a lesson may be in only one group at a
        time. A lesson also has a name.
      </xs:documentation>
    </xs:annotation>
    <xs:sequence>
      <xs:element name="information"     type="dve:information"      maxOccurs="1" />
      <xs:element name="configuration"   type="dve:configuration"    maxOccurs="1" />
      <xs:element name="word"            type="dve:word"             maxOccurs="unbounded" />
    </xs:sequence>
    <xs:attribute name="name"     type="xs:string"    use="required" />
  </xs:complexType>

  <xs:complexType name="information" mixed="false">
    <xs:annotation>
      <xs:documentation xml:lang="en">
        Informations about a lesson.
      </xs:documentation>
    </xs:annotation>
    <xs:all>
      <xs:element name="author"       type="xs:string"    minOccurs="0" />
      <xs:element name="title"        type="xs:string"    minOccurs="0" />
      <xs:element name="created"      type="xs:long"      minOccurs="0" />
      <xs:element name="generator"    type="xs:string"    minOccurs="0" />
      <xs:element name="description"  type="xs:string"    minOccurs="0" />
      <xs:element name="license"      type="xs:string"    minOccurs="0" />
      <xs:element name="group"        type="dve:group"    minOccurs="0" />
    </xs:all>
  </xs:complexType>

  <xs:complexType name="group">
    <xs:annotation>
      <xs:documentation xml:lang="en">
        A group is a hierarchical ordered structure for any lesson to use. Its purpose is to group one or more lessons
        together.
      </xs:documentation>
    </xs:annotation>
    <xs:sequence>
      <xs:element name="group" type="dve:group" minOccurs="0" maxOccurs="1" />
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="configuration" mixed="false">
    <xs:annotation>
      <xs:documentation xml:lang="en">
        Configuration for a lesson. 
      </xs:documentation>
    </xs:annotation>
    <xs:all>
      <xs:element name="maximumScore"     type="xs:double"    minOccurs="0" />
      <xs:element name="poller"           type="xs:string"    minOccurs="0" />
      <xs:element name="filter"           type="xs:string"    minOccurs="0" />
      <xs:element name="pollerArgument"   type="xs:integer"   minOccurs="0" />
    </xs:all>
  </xs:complexType>

  <xs:complexType name="word" mixed="false">
    <xs:annotation>
      <xs:documentation xml:lang="en">
        A word holds as many translations as one may want. For a word to exist there must be at least one translation.
      </xs:documentation>
    </xs:annotation>
    <xs:sequence>
      <xs:element name="translation"  type="dve:translation" minOccurs="1" maxOccurs="unbounded" />
    </xs:sequence>
    <xs:attribute name="grammarType"    type="dve:grammarType" />
  </xs:complexType>

  <xs:complexType name="translation" mixed="false">
    <xs:annotation>
      <xs:documentation xml:lang="en">
        A translation consists of a text and an example sentence for itself.
      </xs:documentation>
    </xs:annotation>
    <xs:sequence>
      <xs:element name="text"           type="xs:string" />
      <xs:element name="pronunciation"  type="xs:string" />
      <xs:element name="example"        type="dve:example" />
    </xs:sequence>
    <xs:attribute name="language"         type="xs:string" use="required" />
    <xs:attribute name="score"            type="dve:score" />
    <xs:attribute name="tryCount"         type="xs:nonNegativeInteger" />
    <xs:attribute name="missCount"        type="xs:nonNegativeInteger" />
    <xs:attribute name="created"          type="xs:long" />
    <xs:attribute name="lastQuestioned"   type="xs:long" />
  </xs:complexType>

  <xs:complexType name="example" mixed="false">
    <xs:annotation>
      <xs:documentation xml:lang="en">
        An example is used inside the translation element and only useful there. It has 2 sub-elements itself. One for
        the actual sentence and the other for the correct grammatical form of the translation.
      </xs:documentation>
    </xs:annotation>
    <xs:sequence>
      <xs:element name="sentence"       type="xs:string" />
      <xs:element name="grammarForm"    type="xs:string" />
    </xs:sequence>
  </xs:complexType>

  <xs:simpleType name="grammarType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="ADJECTIVE" />
      <xs:enumeration value="NOUN" />
      <xs:enumeration value="VERB" />
      <xs:enumeration value="ADVERB" />
      <xs:enumeration value="INTERJECTION" />
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="score">
    <xs:restriction base="xs:double">
      <xs:minInclusive value="0" />
    </xs:restriction>
  </xs:simpleType>

  <xs:element name="lesson" type="dve:lesson" />

</xs:schema>